<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Movie Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the movie title" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Director</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the movies Director" name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Year Published</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the published year" name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Movie Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the movies description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Movie's Price" name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>